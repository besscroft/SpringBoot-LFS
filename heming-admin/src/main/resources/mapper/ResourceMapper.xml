<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dev.heming.fast.mapper.ResourceMapper">

    <resultMap id="resourceMap" type="dev.heming.fast.entity.Resource">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="url" property="url"/>
        <result column="description" property="description"/>
        <result column="type_code" property="typeCode"/>
        <result column="route_key" property="routeKey"/>
        <result column="sort" property="sort"/>
        <result column="creator" property="creator"/>
        <result column="updater" property="updater"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="del" property="del"/>
    </resultMap>

    <select id="selectResourceList" resultSets="java.util.List" resultMap="resourceMap">
        SELECT
            id,
            name,
            url,
            description,
            type_code,
            route_key,
            sort,
            creator,
            updater,
            create_time,
            update_time,
            del
        FROM
            heming_resource
        WHERE
            del = 1
        <if test="name != null and name != ''">
            AND name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="url != null and url != ''">
            AND url LIKE CONCAT('%', #{url}, '%')
        </if>
        <if test="typeCode != null and typeCode != ''">
            AND type_code = #{typeCode}
        </if>
        <if test="routeKey != null and routeKey != ''">
            AND route_key = #{routeKey}
        </if>
        ORDER BY sort
    </select>

</mapper>
